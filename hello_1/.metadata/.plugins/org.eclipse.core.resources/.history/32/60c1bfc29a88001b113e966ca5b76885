package test;

import java.util.Iterator;

public class Q2 {
	public static void main(String[] args) {
		int[] a = {5,1,2,3,6,8,18};
		int ecnt=0, ocnt=0, pcnt=0;
		for (int i = 0; i < a.length; i++) 
		{
			if(a[i]%2==0)
			{
				ecnt++;
			}
			else if(a[i]%2!=0)
			{
				ocnt++;
			}
			
		}
		System.out.println(ectn);
	}

}
